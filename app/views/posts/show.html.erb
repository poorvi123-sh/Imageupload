<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
	<strong>Image</strong>
	<% if @post.avatar.attached? %>
  <img src="<%=(url_for(@post.avatar))%>" width="300" height="300" >
  <%end%>

</p>
<p>
	<strong>Images</strong>
	<% if @post.files.any? %>
   <h3>Attachments:</h3>
   <% @post.files.each do |file| %>
     <%= image_tag(file, width:100) %>
 <% end %>
 <%end%>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
